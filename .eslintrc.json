{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:ramda/recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 12
    },
    "plugins": ["ramda"],
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-unused-vars": [
            "error",
            { "argsIgnorePattern": "^_" }
        ],
        "no-nonoctal-decimal-escape": "off",
        "no-unsafe-optional-chaining": "off"
    }
}
